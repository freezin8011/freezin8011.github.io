<div class="row justify-content-md-center">
    <div class="col-8 ">
        <form action="/real_update/<%= @one_post.id %>" method="post">
          <div class="form-group row justify-content-center my-4">
            <label for="exampleInputTitle1">제목</label>
            <input type="text" class="form-control" name="title" id="exampleInputTitle1" value= "<%= @one_post.title %>" maxlength="40">
          </div>
          
          <div class="form-group row justify-content-center my-4">
            <label for="exampleTextarea">내용</label>
            <textarea class="form-control" id="exampleTextarea" name="content" rows="7" ><%= @one_post.content %></textarea>
          </div>
          
          <div class="form-group row justify-content-center my-4">
            <input class="btn btn-outline-danger"  type="submit" value="Edit">
          </div>
        </form>
    </div>
</div>